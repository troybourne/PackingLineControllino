int dumpState() {
	return 0;
}

void dumping()
{
	switch (dumpState()) 
	{
	case CHECK_ELEVATOR:
		Serial.println("Check Elevator reached");

		break;
	case CHECK_BOX:
		Serial.println("Check Box reached");
		break;
	case DUMP_CYCLE:
		Serial.println("Dumping reached");
		break;
	case CLOSE_DUMP_FLAP:
		Serial.println("Closing Flap reached");
		break;
	case SETTLE_VERIFY_ZERO_AND_TARE:
		Serial.println("Settle to zero for Tare reached");
		break;
	default:
		break;
	}
}

void weighing()
{
	Serial.println(PINF);
	//determineState();  // this will take reading of scale and assign correct state maybe timed interrupt for this?

	switch (determineState())
	{
	case PAUSE_MENU:     //PORT READ??? could combine this with elevator and box is done correctly
						//controllino uses pull downs... keep in mind.
		Serial.println("pause reached");
		break;
	case FULL_ON:      //full on if under 47
		Serial.println("FULL ON reached");
		PORTA = 4;
		analogWrite(CONTROLLINO_AO1, 255);
		break;
	case DUTY_CYCLE_75:  //from 47 - 48.5
		analogWrite(CONTROLLINO_AO1, 190);
		Serial.println("DC75 reached");
		onCycleDuration = dutyPercent[1];
		offCycleDuration = dutyPercent[3];
		dutyCycleToggle();
		break;
	case DUTY_CYCLE_50:  //from 48.5-49.25
		analogWrite(CONTROLLINO_AO1, 127);
		Serial.println("DC50 reached");
		onCycleDuration = dutyPercent[2];
		offCycleDuration = dutyPercent[2];
		dutyCycleToggle();
		break;
	case DUTY_CYCLE_25:
		Serial.println("DC25 reached");
		analogWrite(CONTROLLINO_AO1, 60);
		onCycleDuration = dutyPercent[3];
		offCycleDuration = dutyPercent[1];
		dutyCycleToggle();
		break;
	case CLOSE_MAIN_SCUPPER:
		Serial.println("Close Main Scupper reached");
		PORTA = PORTA & B00000000;
		//while loop for last .75 pound maybe
		break;
	case STOP_AND_SETTLE:
		Serial.println("Stop and Settle reached");
		break;
	case AFFIRM_WEIGHT:     //one CMH20 is .036 lbs
		Serial.println("Affirm Weight reached");
		dumping();
	}



	lcd.setCursor(10, 1);            // move cursor to second line "1" and 9 spaces over
	if (scale.get_units() > 0.1) {
		lcd.print(scale.get_units(), 2);      // display seconds elapsed since power-up
	}
	else lcd.print("zero ");

	lcd.setCursor(0, 1);            // move to the begining of the second line
}
void loop()
{
	while (PINF >= 128) {   //while pin AI7 is HIGH 24v
		//Control State Machine
		Serial.println("Control State Machine Reached");
}
	if (oneSecondTimer() == true) {
		Serial.println("one second passed");
		oneSecondStart = millis();
	}
	weighing();
}

